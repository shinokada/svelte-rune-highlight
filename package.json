{
  "name": "svelte-rune-highlight",
  "version": "0.5.2",
  "description": "A highlight library for Svelte 5 with Rune",
  "license": "MIT",
  "main": "dist/index.js",
  "homepage": "https://svelte-rune-highlight.codewithshin.com/",
  "author": {
    "name": "Shinichi Okada",
    "email": "connect@codewithshin.com",
    "url": "https://blog.codewithshin.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shinokada/svelte-rune-highlight"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "copy:packagejson": "svelte-lib-helpers package",
    "gen:docs5": "svelte-lib-helpers docs5FromType",
    "lib-helpers": "npm run gen:docs5 && npm run package && npm run copy:packagejson"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0-next.65"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.42.1",
    "@sveltejs/adapter-auto": "^3.2.0",
    "@sveltejs/kit": "^2.5.5",
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "2.36.0-next.9",
    "flowbite-svelte-icons": "2.0.0-next.5",
    "postcss": "^8.4.38",
    "postcss-load-config": "^5.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "publint": "^0.1.16",
    "svelte": "5.0.0-next.90",
    "svelte-5-ui-lib": "^0.3.7",
    "svelte-check": "^3.6.8",
    "svelte-lib-helpers": "^0.4.5",
    "svelte-rune-highlight": "^0.5.2",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vitest": "^1.4.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "highlight.js": "^11.9.0"
  },
  "keywords": [
    "svelte 5",
    "svelte runes",
    "highlight.js",
    "syntax-highlight"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./*.svelte": {
      "types": "./dist/*.svelte.d.ts",
      "import": "./dist/*.svelte"
    },
    "./styles/*.css": {
      "import": "./dist/styles/*.css"
    },
    "./styles": {
      "types": "./dist/styles/index.d.ts",
      "import": "./dist/styles/index.js"
    },
    "./styles/*": {
      "types": "./dist/styles/*.d.ts",
      "import": "./dist/styles/*.js"
    },
    "./styles/*.js": {
      "types": "./dist/styles/*.d.ts",
      "import": "./dist/styles/*.js"
    },
    "./languages": {
      "types": "./dist/languages/index.d.ts",
      "import": "./dist/languages/index.js"
    },
    "./languages/*": {
      "types": "./dist/languages/*.d.ts",
      "import": "./dist/languages/*.js"
    },
    "./languages/*.js": {
      "types": "./dist/languages/*.d.ts",
      "import": "./dist/languages/*.js"
    },
    "./package.json": "./package.json"
  }
}
