{
	"name": "svelte-rune-highlight",
	"version": "0.6.4",
	"description": "A highlight library for Svelte 5 with Rune",
	"license": "MIT",
	"main": "dist/index.js",
	"homepage": "https://svelte-rune-highlight.codewithshin.com/",
	"author": {
		"name": "Shinichi Okada",
		"email": "connect@codewithshin.com",
		"url": "https://blog.codewithshin.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shinokada/svelte-rune-highlight.git"
	},
	"keywords": [
		"svelte 5",
		"svelte runes",
		"highlight.js",
		"syntax-highlight"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"copy:packagejson": "svelte-lib-helpers package",
		"gen:docs5": "svelte-lib-helpers docs5",
		"lib-helpers": "pnpm format && pnpm gen:docs5 && pnpm package && pnpm copy:packagejson",
		"ch": "npx changeset",
		"cv": "npx changeset version",
		"cp": "npx changeset publish"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./languages/*": {
			"types": "./dist/languages/*.d.ts",
			"import": "./dist/languages/*.js"
		},
		"./styles/*": {
			"types": "./dist/styles/*.d.ts",
			"import": "./dist/styles/*.css"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.28.1",
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.22.0",
		"@playwright/test": "^1.51.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@tailwindcss/vite": "^4.0.14",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.1.0",
		"flowbite-svelte-icons": "^2.0.3",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.9",
		"runatics": "^0.1.4",
		"runes-meta-tags": "^0.4.2",
		"runes-webkit": "^0.9.58",
		"svelte": "^5.23.0",
		"svelte-5-ui-lib": "^0.12.3",
		"svelte-check": "^4.1.5",
		"svelte-lib-helpers": "^0.4.16",
		"tailwindcss": "^4.0.14",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1",
		"vite": "^6.2.2",
		"vitest": "^3.0.8"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"highlight.js": "^11.11.1"
	}
}
